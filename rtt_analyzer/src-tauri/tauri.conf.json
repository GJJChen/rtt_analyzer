{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RTT Analyzer",
  "version": "0.1.0",
  "identifier": "com.rtt.analyzer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RTT Analyzer",
        "width": 1200,
        "height": 800,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/rtt_analyzer_backend" 
    ]
  }
}