{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RTT Analyzer GUI",
  "version": "0.1.3",
  "identifier": "com.rtt.analyzer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RTT Analyzer",
        "width": 1200,
        "height": 800,
        "visible": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/rtt_analyzer_backend-x86_64-pc-windows-msvc"
    ],
    "windows": {
      "nsis": {
        "languages": ["SimpChinese"],
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": false
      }
    }
  }
}